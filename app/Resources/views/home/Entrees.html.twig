{% extends 'base.html.twig' %}

{% block stylesheets %}

    <link rel="stylesheet" href="{{ asset('https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css' ) }}">

    <link rel="stylesheet"
          href="{{ asset('https://cdn.datatables.net/buttons/1.5.6/css/buttons.dataTables.min.css' ) }}">

    <style>
        .dataTables_filter input {
            border: 1px solid #555;

            border-radius: 1px;
            box-sizing: border-box;
        }
    </style>


{% endblock %}
{% block body %}
    <h1>Entrees Total</h1>
    {% set max = 1 %}
    {% set first = "" %}
    {% for brd in bordereauSalles %}
        {% if loop.first %}
            {% set first = brd.film.titre %}
        {% endif %}
        {% if brd.semaine> max %}
            {% set max = brd.semaine %}
        {% endif %}
    {% endfor %}


    {% set max2 = 1 %}
    {% set first2 = "" %}
    {% for brd in bordereauRegions %}
        {% if loop.first %}
            {% set first2 = brd.film.titre %}
        {% endif %}
        {% if brd.semaine> max2 %}
            {% set max2 = brd.semaine %}
        {% endif %}
    {% endfor %}

    <br>
    <br>
    <h3>Bordereau Salles</h3>
    <table id="example" class="display" style="width:100%">
        <thead>
        <tr>

            <th>Film</th>
            <th>Salle</th>
            {% for i in 1..max %}
                <th>Semaine {{ i }}</th>
            {% endfor %}
            <th>Total</th>
        </tr>
        </thead>
        <tbody>
        {% set sum = 0 %}
        {% set index = 1 %}
        {% for brd in bordereauSalles %}

            {% if (loop.first) %}
                {% set sum = sum + brd.nbEntrees %}


                <tr>
                <td>{{ brd.film.titre }}</td>
                <td>{{ brd.salle.nom }}</td>
                <td>{{ brd.nbEntrees }}</td>

            {% elseif brd.film.titre is same as(first) %}

                {% set sum = sum + brd.nbEntrees %}
                {% set index =brd.semaine %}
                <td>{{ brd.nbEntrees }}</td>
            {% else %}
                {% for i in index..max %}
                    {% if index != max %}
                    <td>0</td>
                    {% endif %}
                {% endfor %}
                <td>{{ sum }}</td>
                {% set sum = brd.nbEntrees %}
                </tr>
                <tr>
                <td>{{ brd.film.titre }}</td>
                <td>{{ brd.salle.nom }}</td>
                <td>{{ brd.nbEntrees }}</td>
                {% set index = brd.semaine %}

            {% endif %}
            {% if loop.last %}
                {% for i in index+1..max %}
                    {% if index != max %}
                        <td>0</td>
                    {% endif %}
                {% endfor %}
                <td>{{ sum }}</td>
                </tr>
            {% endif %}



        {% endfor %}

        </tbody>
        <tfoot>
        <tr>
            <th>TOTAL</th>
            <td></td>
            {% for i in 1..max %}
                <td></td>
            {% endfor %}
            <td></td>
        </tr>
        </tfoot>
    </table>

    <br>
    <h3>Bordereau Regions</h3>

    <table id="region" class="display" style="width:100%">
        <thead>
        <tr>

            <th>Film</th>
            <th>Region</th>
            {% for i in 1..max2 %}
                <th>Semaine {{ i }}</th>
            {% endfor %}
            <th>Total</th>
        </tr>
        </thead>
        <tbody>
        {% set sum = 0 %}
        {% set index = 1 %}
        {% for brd in bordereauRegions %}

            {% if (loop.first) %}
                {% set sum = sum + brd.nbEntrees %}


                <tr>
                <td>{{ brd.film.titre }}</td>
                <td>{{ brd.region.nom }}</td>
                <td>{{ brd.nbEntrees }}</td>

            {% elseif brd.film.titre is same as(first2) %}

                {% set sum = sum + brd.nbEntrees %}
                {% set index =brd.semaine %}
                <td>{{ brd.nbEntrees }}</td>
            {% else %}
                {% for i in index..max2 %}
                    {% if index != max2%}
                        <td>0</td>
                    {% endif %}
                {% endfor %}
                <td>{{ sum }}</td>
                {% set sum = brd.nbEntrees %}
                </tr>
                <tr>
                <td>{{ brd.film.titre }}</td>
                <td>{{ brd.region.nom }}</td>
                <td>{{ brd.nbEntrees }}</td>
                {% set index = brd.semaine %}

            {% endif %}
            {% if loop.last %}
                {% for i in index+1..max2 %}
                    {% if index != max2 %}
                        <td>0</td>
                    {% endif %}
                {% endfor %}
                <td>{{ sum }}</td>
                </tr>
            {% endif %}



        {% endfor %}

        </tbody>
        <tfoot>
        <tr>
            <th>TOTAL</th>
            <td></td>
            {% for i in 1..max2 %}
                <td></td>
            {% endfor %}
            <td></td>
        </tr>
        </tfoot>
    </table>




{% endblock %}

