{% extends 'base.html.twig' %}

{% block body %}
    <h1>Salle</h1>
    {{ form_start(delete_form) }}
    <input class="btn btn-danger" style="float:right" type="submit" value="X">
    {{ form_end(delete_form) }}
    <a class="btn btn-success" href="{{ path('salle_index') }}">Back to the list</a>

    <table class="table table-striped">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ salle.nom }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ salle.adresse }}</td>
            </tr>
            <tr>
                <th>Mat_fiscale</th>
                <td>{{ salle.matfiscale }}</td>
            </tr>
            <tr>
                <th>Part_dist_salle</th>
                <td>{{ salle.partdistsalle }}</td>
            </tr>
            <tr>
                <th>Part_proprio_salle</th>
                <td>{{ salle.partpropriosalle }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('salle_edit', { 'id': salle.id }) }}">Edit</a>

{% endblock %}
